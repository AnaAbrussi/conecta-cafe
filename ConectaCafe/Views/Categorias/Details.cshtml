@model ConectaCafe.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-dark border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3 mb-0">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3">Detalhes</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">
                    <div class="col-12 mb-3">
                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="mb-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id"
                            class="btn btn-warning me-2">Alterar</a>
                        <a asp-action="Index" class="btn btn-info">Voltar</a>
                    </div> @* primary secondary warning danger info dark success *@
                </div>

            </div>
        </div>
    </div>
</div>